/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 5rpx;
  border-radius: 50%;
  box-shadow: 2px 2px 1px #888888;
}
.page-head{
  padding: 20rpx 50rpx 40rpx;
  text-align: center;
}
.page-head-title{
  letter-spacing: 1rpx
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 32rpx;
  color: #BEBEBE;
}
.page-head-line{
  margin: 0 auto;
  width: 150rpx;
  height: 2rpx;
  background-color: #D8D8D8;
}
.page-head-desc{
  padding-top: 20rpx;
  color: #9B9B9B;
  font-size: 32rpx;
}