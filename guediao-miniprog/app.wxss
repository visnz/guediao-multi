/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.userinfo-avatar {
  width: 256rpx;
  height: 256rpx;
  margin: 5rpx;
  border-radius: 50%;
  box-shadow: 2px 2px 1px #888888;
}
.page-head{
  padding: 20rpx 50rpx 40rpx;
  text-align: center;
}
.page-head-title{
  letter-spacing: 1rpx;
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 32rpx;
  color: #BEBEBE;
}
.page-head-line{
  margin: 0 auto;
  width: 150rpx;
  height: 2rpx;
  background-color: #D8D8D8;
}
.page-head-desc{
  padding-top: 20rpx;
  color: #9B9B9B;
  font-size: 32rpx;
}

.button-me{
  margin: 15rpx;
  font-size:28rpx;
}
.map-me{
  margin:20rpx
}
.block{
 margin: 10rpx;
 text-align: center;
 align-items: center;
}
.block-left{
  margin:40rpx;
  text-align: left;
  align-items: left;
}
.title{
  text-align: center;
  color:#8a8a8a;
  font-size: 28rpx;
  letter-spacing:1rpx;
  font-weight:normal;
  margin: 15rpx;
  border-bottom: 1rpx solid #D8D8D8;
  padding: 0 60rpx 10rpx 60rpx
}
.title-mini{
  text-align: center;
  color:#aaa;
  font-size: 22rpx;
  letter-spacing:1rpx;
  font-weight:normal;
  margin: 12rpx 20rpx 12rpx 20rpx;
  border-bottom: 1rpx solid #D8D8D8;
  padding: 0 60rpx 10rpx 60rpx
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.contact-me{
  font-size:20rpx;
  color:#666;
}
.contact-item{

  padding-left:100rpx;
  padding-right: 100rpx;
  margin-top:10rpx;
  margin-bottom: 10rpx;
  margin-left:auto;
  margin-right:auto;  
}
.contact-image{      
  width:24rpx;
  height:24rpx;
  margin-left:10rpx;
  margin-right: 10rpx;
}
.contact-content{
  width:60rpx;
  font-size:28rpx;
  margin-left:10rpx;
  margin-right: 10rpx;
  color:#aaa;
}
.contact-content-linkable{
  width:60rpx;
  font-size:28rpx;
  margin-left:10rpx;
  margin-right: 10rpx;
  color:#66f
}
.qrcode{
  width:300rpx;
  height:300rpx;
  margin:10rpx 80rpx 10rpx 80rpx ;
}
.qrcode-title{
  text-align: center;
  font-size: 20rpx;
  letter-spacing: 1rpx;
  color:#888;
  padding:6rpx;
  margin-top:30rpx;
}